<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xamtest.Pages.FormattedTextsTestPage"
             xmlns:behaviors="clr-namespace:xamtest.Behaviors;assembly=xamtest"
             xmlns:i18n="clr-namespace:xamtest.Data;assembly=xamtest">

  <ContentPage.Content>
    <StackLayout Orientation="Vertical">
      <StackLayout Orientation="Horizontal" Padding="15" HeightRequest="40" x:Name="LangWrapper" BackgroundColor="Aqua">
        <Picker x:Name="LangPicker" HorizontalOptions="Start" SelectedIndex="{Binding SelectedCultureId, Mode=TwoWay}"  Title="Select language">
          <Picker.Items>
            <x:String>English</x:String>
            <x:String>Deutsch</x:String>
            <x:String>Български</x:String>
          </Picker.Items>
        </Picker>
      </StackLayout>
      <!--<Image HorizontalOptions="EndAndExpand" VerticalOptions="Center" HeightRequest="25" x:Name="flag" Source="{Binding SelectedCulture.ImageSrc}">
                </Image>-->
      <StackLayout>
        <Label FontSize="30" TextColor="Maroon" Text="lalalala">
          <Label.Behaviors>
            <behaviors:TranslateTextBehavior LanguagePicker="{x:Reference LangPicker}" TranslateKey="FlyInAnim"/>
          </Label.Behaviors>
        </Label>
      </StackLayout>

    </StackLayout>
  </ContentPage.Content>
</ContentPage>